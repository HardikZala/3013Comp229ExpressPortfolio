<%- include ('partials/main_nav.ejs') %>
   

<main class="container">
  <div class="jumbotron">
    <h1 class="display-4">Welcome to <%= title %> page</h1>
    <!-- Contact Information Panel -->
    <div class="card">
      <div class="card-body">
        <h2>Contact Information</h2>
        <p>
          <strong>Name:</strong> Hardiksinh Zala<br>
          <strong>Email:</strong> your.email@example.com<br>
          <strong>Phone:</strong> (647) 677-6314<br>
          <strong>Address:</strong> Pickering, ON, CANADA<br>
        </p>
      </div>
    </div>

    <!-- Contact Form -->
    <section>
      <h2>Contact Us</h2>
      <form action="/" method="POST"> 
        <div class="form-group">
          <label for="firstName">First Name:</label> <!-- First name Field-->
          <input type="text" class="form-control" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
          <label for="lastName">Last Name:</label> <!-- Last name Field-->
          <input type="text" class="form-control" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
          <label for="contactNumber">Contact Number:</label> <!-- Contact number Field-->
          <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required>
        </div>
        <div class="form-group">
          <label for="email">Email Address:</label> <!-- Email Field-->
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="message">Message:</label> <!-- Message Field-->
          <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>
  </div>
</main>

    
